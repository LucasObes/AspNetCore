<h1>Lista de Produtos</h1>

<a class="btn btn-primary mb-2" href="/produto/cadastrar">Cadastrar</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var produto in ViewBag.Produtos) // ViewBag = trafegar dados entre controller/c# com cshtml
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.PrecoUnitario</td>
                <td>
                    <a class ="btn btn-outline-primary" href="/produto/editar?id=@produto.Id">
                        <i class="fa-regular fa-pen-to-square"></i>
                        Editar
                    </a>
                    <a class ="btn btn-outline-danger" href="/produto/apagar?id=@produto.Id">
                        <i class="fa-regular fa-trash-can"></i>
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>