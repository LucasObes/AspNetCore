<h1>Lista de Clientes</h1>
<a class="btn btn-primary mb-2" href="/cliente/cadastrar">Cadastrar</a>

<form action="/cliente" method="get">
	<div class="row">
		<div class="col">
			<label class="form-label" for="campo-pesquisa">Pesquisa</label>
			<input type="text" name="pesquisa" id="campo-pesquisa" value="@ViewBag.Pesquisa" />
		</div>
	</div>
</form>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Código</th>
			<th>Nome</th>
			<th>CPF</th>
			<th>Data de Nascimento</th>
			<th>Endereço</th>
			<th>Ação</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cliente in ViewBag.Clientes)
		{
			<tr>
				<td>@cliente.Id</td>
				<td>@cliente.Nome</td>
				<td>@cliente.Cpf</td>
				<td>@cliente.DataNascimento</td>
				<td>@cliente.Endereco.Cidade - @cliente.Endereco.Estado -  @cliente.Endereco.Cep</td>
				<td>
					<a class="btn btn-outline-primary" href="/cliente/editar?id=@cliente.Id">
						<i class="fa-regular fa-pen-to-square"></i>
						Editar
					</a>
					<a class="btn btn-outline-danger" href="/cliente/apagar?id=@cliente.Id">
						<i class="fa-regular fa-trash-can"></i>
						Apagar
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>