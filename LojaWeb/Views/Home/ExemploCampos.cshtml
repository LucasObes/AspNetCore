<script>
    function calcularIdade() 
    {
        let nome = document.getElementById("nome").value;
        let idade = parseInt(document.getElementById("idade").value);
        let anoNascimento = calcularAnoNascimento(idade);

        let mensagem = "Nome: " + nome + " tem " + idade + " anos de idade e nasceu no ano de " + anoNascimento;
        alert(mensagem)
    }

    document.getElementById("button-calcular-idade").addEventListener("click", () => calcularIdade())

    function apresentarAnoNascimento(){
        //debugger: debug do código para ver qq ta rolando;
        // Variável com o valor da idade em int
        let idade = parseInt(document.getElementById("idade").value);
        // Verifica se a conversão para int deu certo, ou seja, se for Nan, não é um número
        // Nesse caso, verificamos que deve ser um número
        if(!isNaN (idade)){
            let anoNascimento = calcularAnoNascimento(idade);
            let spanAnoNascimento = document.getElementById("ano-nascimento");
            spanAnoNascimento.innerText = `Ano de Nascimento ${anoNascimento}`;
            spanAnoNascimento.style.display = "inline-block";
        }else{
            let spanAnoNascimento = document.getElementById("ano-nascimento");
            spanAnoNascimento.innerText = ``;
            spanAnoNascimento.style.display = "none";
        }
    }

    document.getElementById("idade").addEventListener("focusout", () => apresentarAnoNascimento());

    function calcularAnoNascimento(idade){
        let anoAtual = new Date().getFullYear();
        let anoNascimento = anoAtual - idade

        return anoNascimento;
    }
</script>